{
  "voice_generation": {
    "default_engine": "edge",
    "default_voice": "zh-CN-YunxiNeural",
    "default_rate": 1.0,
    "default_volume": 1.0,
    "generate_subtitle": false,
    "output_format": "mp3"
  },
  "engines": {
    "edge_tts": {
      "enabled": true,
      "voices": [
        "zh-CN-YunxiNeural",
        "zh-CN-XiaoxiaoNeural",
        "zh-CN-YunyangNeural",
        "zh-CN-XiaoyiNeural"
      ]
    },
    "siliconflow": {
      "enabled": false,
      "api_key": "YOUR_SILICONFLOW_API_KEY_HERE",
      "base_url": "https://api.siliconflow.cn/v1",
      "model": "FishSpeech"
    },
    "openai_tts": {
      "enabled": false,
      "api_key": "YOUR_OPENAI_API_KEY_HERE",
      "model": "tts-1",
      "voice": "alloy"
    }
  },
  "output": {
    "audio_dir": "output/audio",
    "subtitle_dir": "output/subtitles"
  }
}