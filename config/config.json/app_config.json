    "backup_enabled": true
  },
  "ui_settings": {
    "theme": "dark",
    "language": "zh-CN",
    "selected_style": "吉卜力风格",
    "window_size": {
      "width": 1200,
      "height": 800
    }
  },
  "project_settings": {
    "default_project_dir": "projects",
